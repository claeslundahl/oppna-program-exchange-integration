  <bean class="se.vgregion.exchange.service.EwsService">
    <constructor-arg ref="ldapService"/>
  </bean>

  <!-- Spring ldap -->
  <bean id="contextSource" class="org.springframework.ldap.core.support.LdapContextSource">
    <property name="url" value="${BIND_URL}"/>
    <!--<property name="url" value="ldaps://vgregion.se:636"/>-->
    <!--<property name="url" value="ldap://vgregion.se:389"/>-->
     <!-- in some queries we need an empty base and in others we can search with base explicitly -->
    <!--<property name="base" value="DC=sasdfe,DC=vgrasdfegion,OU=usr-Pers"/>-->
    <property name="base" value="${BASE}"/>
    <!--<property name="base" value="OU=usr-Pers,DC=vgregion,DC=se"/>-->
    <property name="userDn" value="${BIND_DN}"/>
    <!--<property name="userDn" value="CN=TK.Regionportalen.01,OU=TK,OU=usr-Ifr,DC=vgregion,DC=se"/>-->
    <property name="password" value="${BIND_PW}"/>
    <!--<property name="password" value="tq?XCgLki!MIm69nekm5"/>-->
    <property name="pooled" value="true"/>
    <property name="baseEnvironmentProperties">
      <map>
        <entry key="java.naming.ldap.attributes.binary" value="objectSid"/>
      </map>
    </property>

  </bean>

  <bean id="ldapTemplate" class="org.springframework.ldap.core.simple.SimpleLdapTemplate">
    <constructor-arg ref="contextSource"/>
  </bean>

  <bean id="ldapService" class="se.vgregion.ldapservice.SimpleLdapServiceImpl">
    <constructor-arg ref="ldapTemplate"/>
  </bean>
